<%- include ../partials/header.ejs %>
<!DOCTYPE html>
<html>
  <head>
    <title> <%= title %> </title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
  </head>
  <div>
    <a href="/contact/add" class="btn btn-primary align-self-end" role="button">
        <i class="fas fa-plus-circle"></i> 
        Add a new contact
    </a>                
</div>

  <div class="table-responsive">
    <table class="table table-bordered table-striped table-hover">
        <!-- Header Row-->
        <tr>
            <th class="text-center">personID</th>
            <th class="text-center">Name</th>
            <th class="text-center">Email</th>                    
            <th class="text-center">Number</th>
        </tr>

        <!-- Repeatable Template Row -->

        <% for(let count = 0; count < ContactList.length; count++) { %>
            <tr>
                <td class="text-center"><%= ContactList[count].personID %></td>
                <td class="text-center"><%= ContactList[count].CName %></td>
                <td class="text-center"><%= ContactList[count].email %></td>
                <td class="text-center"><%= ContactList[count].number %></td>
                <td class="text-center">
                    <a href="/contact/edit/<%= ContactList[count].id %>" class="btn btn-primary btn-sm">
                    <i class="fas fa-pencil-alt"></i>
                    Edit</a>
                </td>
                <td class="text-center">
                    <a href="/contact/delete/<%= ContactList[count].id %>" class="btn btn-danger btn-sm">
                    <i class="fas fa-trash-alt"></i>
                    Delete</a>
                </td>
            </tr>
        <% } %>
    </table>
</div>
</div>
</main>
<%- include ../partials/footer.ejs %>
</html>
